pipeline {
     agent {
        docker { image 'linux:16.13.1-alpine' }
    }
    stages {
        stage('Check node version') {
            steps {
                echo 'Hello, Node'
                sh 'node --version'
            }
        }
        stage('Install Backend node modules') {
            steps {
                sh 'sudo chown -R 501:20 "/.npm"'
                echo 'Installing backend  modules'
                sh 'npm install'
                sh 'echo Done!'
                

            }
        }
        stage('Install Frontend node modules') {
            steps {
                echo 'Installing frontend modules'
                sh 'cd client'
                sh 'npm install'
                sh 'echo Done!'

            }          
        }

          stage('Run backend and front end') {
            steps {
                echo 'Running npm concurrent ...'
                sh 'npm run concurrent'
                sh 'echo Done!'
                

            }
        }
    }
}
